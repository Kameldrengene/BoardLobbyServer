@page
@model BoardLobbyServer.Pages.SignUpModel
@{
}

@if (Model.master)
{
<div class="container">
    <div class="row">
        <div class="col">
            
        </div>
        <div class="col">
            <h2 class="m-3">Creating Admin Account</h2>
            <form method="post">
                <div class="form-floating mb-3 ">
                    <input type="email" name="emailaddress" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Sign Up</button>

            </form>
        </div>
        <div class="col">

        </div>
    </div>
</div>
}
else if (Model.firstTime)
{
<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
            <h2 class="m-3">Creating Master Account</h2>
            <form method="post">
                <div class="form-floating mb-3 ">
                    <input type="email" name="emailaddress" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Sign Up</button>

            </form>
        </div>
        <div class="col">

        </div>
    </div>
</div>
}
else
{
<div class="alert alert-danger d-flex align-items-center m-3" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
    <div>
        You have to be Master with giga ballz to create accounts bro!
    </div>
</div>
}

<div>
    @Model.log
</div>