@page
@model BoardLobbyServer.Pages.EditAccountModel
@{
}
<div class="container m-3">
    <div class="row">
        <div class="col">
            
        </div>
        <div class="col">
            <div class="alert alert-light" role="alert">
                @Model.alert
            </div>
            <form method="post">
                <div class="input-group mb-3">
                    <span class="input-group-text">Admin id:</span>
                    <input type="text" name="adminid" id="disabledTextInput" class="form-control" placeholder="@Model.adminId" disabled>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Admin name:</span>
                    <input type="text" name="emailaddress" class="form-control" aria-label="Name of admin" value="@Model.adminName">

                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Admin password:</span>
                    <input type="text" name="password" class="form-control" aria-label="Password of admin" value="@Model.adminPassword">

                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-info w-100" name="updatebutton">Update</button>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-danger w-100" name="deletebutton">Delete</button>
                    </div>
                </div>

            </form>
        </div>
        <div class="col">
           
        </div>
    </div>
</div>