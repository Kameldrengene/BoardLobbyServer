@page
@model BoardLobbyServer.Pages.SignInModel
@{
}

<div class="container mt-3">
    <div class="row">
        <div class="col">
            
        </div>
        <div class="col">
            <h3 class="m-3">Admin sign in</h3>
            <form method="post">
                <div class="form-floating mb-3 ">
                    <input type="email" name="emailaddress" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Sign In</button>

            </form>
        </div>
        <div class="col">
            
        </div>
    </div>
    <div class="row">
        <div class="col">
            
        </div>
        <div class="col">
            <div id="emailHelp" class="form-text mt-3 mb-1">If you do not have any account please sign up.</div>
            <form asp-page-handler="signup" method="post">
                <button class="btn btn-primary w-100 ">Sign Up</button>
            </form>
        </div>
        <div class="col">

        </div>
    </div>
</div>

    <div class="alert alert-light" role="alert">
        @Model.log
    </div>
