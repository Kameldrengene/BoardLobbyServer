@page
@model BoardLobbyServer.Pages.SignInModel
@{
}

<div class="container d-flex justify-content-center p-3">
    <form method="post" class="border bg-light shadow-sm rounded w-50 p-3">
        <div class="container d-flex justify-content-center">
            <h3 class="m-3">Sign In</h3>
        </div>
        <div class="text-center">
            <img src="~/images/kamel.png" class="rounded-circle mb-3"  style="width: 150px" alt="...">
        </div>
        <input type="hidden" id="imgsrc" name="imgsrc" value="">
       <div class="form-floating mb-3 ">
    <input type="email" name="emailaddress" class="form-control" id="floatingInput" placeholder="name@example.com" required>
    <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
    <label for="floatingPassword">Password</label>
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-3">Sign In</button>
    </form>
</div>

<div class="alert alert-light" role="alert">
    @Model.log
</div>
