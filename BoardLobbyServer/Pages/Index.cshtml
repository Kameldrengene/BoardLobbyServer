@page
@model BoardLobbyServer.Pages.IndexModel
@{
}

<h1>Welcome to CamelLudo</h1>



<div class="container">
    <div class="row">
        <div class="col">
            <div class="card w-50" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">On going games</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    @if (Model.logged)
                    {
                        <h6>Welcome @Model.adminName</h6>
                    }
                    else
                    {
                        <h6>To manage games please:</h6>
                        <a class="card-link" asp-area="" asp-page="/SignIn">Sign In</a>
                        <a class="card-link" asp-area="" asp-page="/SignUp">Sign Up</a>
                    }

                </div>
            </div>
        </div>
        <div class="col">
            <div class="card w-50" style="width: 18rem;">
                <div class="text-center bg-dark"><img src="~/images/1.png" class="card-img-top w-25 m-3 " alt="..."></div>
                
                <div class="card-body">
                    <p class="card-text">Weather: @Model.weather &#8451; </p>
                </div>
            </div>
        </div>

    </div>
</div>






@section Scripts{
    <script src="~/js/playerdata.js"></script>
}
<script src="~/js/signalr/dist/browser/signalr.js"></script>
